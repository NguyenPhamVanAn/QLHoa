@model IEnumerable<book.Models.Book>

@{
    ViewData["Title"] = $"Book list ({Model.Count()} items)";
}

<p class="h3">ICT library </p>
<table class="table table-hover table-sm">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
          
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
          
          
            <td>
                    <a asp-router-id="@item.Id" asp-action="Details"> @item.Name</a>   
            </td>
            <td>
                 @item.Authors
            </td>
            <td>
                @item.Publisher
            </td>
            <td>
                @item.Year
            </td>
           
            <td>
                
                <a asp-action="Details" asp-router-id="@item.Id" class="btn btn-sm btn-outline-info">Details</a>

            </td>
        </tr>
}
<tr><td colspan="5"><strong>Tổng Số: @Model.Count()</strong> </td></tr>

    </tbody>
</table>
